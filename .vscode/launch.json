{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with esbuild-runner",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeArgs": ["-r", "esbuild-runner/register"],
      "request": "launch",
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
